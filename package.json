{
  "name": "funamots",
  "version": "2.1.0",
  "description": "Functional typescript DynamoDB Client",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "https://github.com/mtranter/funamots",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:int": "jest --collectCoverage",
    "watch:test": "jest --watch",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "build-ci": "run-s build test:int"
  },
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.258.0"
  },
  "dependencies": {
        "@aws/dynamodb-auto-marshaller": "^0.7.1",
        "@aws/dynamodb-data-marshaller": "^0.7.3",
        "@aws/dynamodb-expressions": "^0.7.3"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.36.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@shelf/jest-dynamodb": "^2.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "aws-sdk": "^2.798.0",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-junit": "^13.0.0",
    "merge": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "build/main",
    "build/module",
    "dist/**",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/pre-commit.sh"
    }
  }
}
