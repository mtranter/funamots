{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "listFiles": false,
    "lib": ["es6"],
  },
  "exclude": [
    ".vscode",
    ".git",
    "./local",
    "./tests",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
